<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.marshalchen.common.demoofui.HowToUseActivity">

    <TextView
        android:id="@+id/howToUseGradleTag"
        android:text="Use Gradle:"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:textSize="18sp"
        android:layout_toRightOf="@id/howToUseGradleTag"
        android:layout_marginLeft="20dp"
        android:layout_height="wrap_content"
        android:id="@+id/howToUseDetail" />

    <TextView
        android:layout_below="@id/howToUseGradleTag"
        android:layout_marginTop="160dp"
        android:layout_width="wrap_content"
        android:textSize="18sp"
        android:id="@+id/howToUseProjectTag"
        android:layout_height="wrap_content"
        android:text="Project website:" />

    <TextView
        android:layout_marginTop="160dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_toRightOf="@id/howToUseProjectTag"
        android:layout_marginLeft="20dp"
        android:id="@+id/howToUseProjectDetail" />

</RelativeLayout>
