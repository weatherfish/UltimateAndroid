<com.marshalchen.common.uimodule.dragSortListView.DragSortListView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dslv="http://schemas.android.com/apk/res-auto"
    android:id="@android:id/list"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_margin="3dp"
    android:choiceMode="multipleChoice"
    android:dividerHeight="1px"
    android:padding="3dp"
    dslv:dslv_click_remove_id="@id/click_remove"
    dslv:dslv_collapsed_height="1px"
    dslv:dslv_drag_enabled="true"
    dslv:dslv_drag_handle_id="@id/drag_handle"
    dslv:dslv_drag_scroll_start="0.33"
    dslv:dslv_drag_start_mode="onDown"
    dslv:dslv_float_alpha="0.6"
    dslv:dslv_remove_enabled="true"
    dslv:dslv_remove_mode="clickRemove"
    dslv:dslv_slide_shuffle_speed="0.3" />

