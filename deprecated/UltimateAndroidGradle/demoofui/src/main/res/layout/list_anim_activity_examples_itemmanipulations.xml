<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="8dp"
            android:scrollbarStyle="outsideOverlay">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="8dp">

        <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:onClick="onDragAndDropClicked"
                android:text="draganddrop"/>

        <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:onClick="onSwipeDismissClicked"
                android:text="swipedismiss"/>

        <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:onClick="onAnimateRemovalClicked"
                android:text="animateremoval"/>

        <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:onClick="onAnimateAdditionClicked"
                android:text="animateaddition"/>

        <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:onClick="onExpandListItemAdapterClicked"
                android:text="expandablelistitemadapter"/>
    </LinearLayout>

</ScrollView>