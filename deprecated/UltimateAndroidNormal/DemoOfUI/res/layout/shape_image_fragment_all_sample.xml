<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Shader Based Images"
            android:layout_marginBottom="12dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="3">

            <com.marshalchen.common.uimodule.shapeimageview.CircularImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:src="@drawable/shape_image_neo"
                app:borderWidth="6dp"
                app:borderColor="@color/DarkGray"/>

            <com.marshalchen.common.uimodule.shapeimageview.RoundedImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:src="@drawable/shape_image_neo"
                app:radius="6dp"
                app:borderWidth="6dp"
                app:borderColor="@color/DarkGray"
                app:square="true"/>

            <com.marshalchen.common.uimodule.shapeimageview.BubbleImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:src="@drawable/shape_image_neo"
                app:square="true"
                app:arrowPosition="right"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Bitmap Mask Based Images"
            android:layout_marginBottom="12dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="3">

            <com.marshalchen.common.uimodule.shapeimageview.mask.PorterShapeImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="8dp"
                app:shape="@drawable/shape_image_triangle"
                android:src="@drawable/shape_image_neo"
                app:square="true"/>

            <com.marshalchen.common.uimodule.shapeimageview.mask.PorterShapeImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="8dp"
                app:shape="@drawable/shape_image_octogon"
                android:src="@drawable/shape_image_neo"
                app:square="true"/>

            <com.marshalchen.common.uimodule.shapeimageview.mask.PorterShapeImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="8dp"
                app:shape="@drawable/shape_image_star"
                android:src="@drawable/shape_image_neo"
                app:square="true"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Shape XML Based Images"
            android:layout_marginBottom="12dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2">

            <com.marshalchen.common.uimodule.shapeimageview.mask.PorterShapeImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="8dp"
                app:shape="@drawable/shape_image_shape_rounded_rectangle"
                android:src="@drawable/shape_image_neo"
                app:square="true"/>

            <com.marshalchen.common.uimodule.shapeimageview.mask.PorterShapeImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="8dp"
                app:shape="@drawable/shape_image_shape_circle"
                android:src="@drawable/shape_image_neo"
                app:square="true"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.marshalchen.common.uimodule.shapeimageview.DiamondImageView
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_margin="8dp"
                android:src="@drawable/shape_image_neo"
                app:borderWidth="8dp"
                app:borderColor="@color/DarkGray"
                android:layout_gravity="center_horizontal"/>

            <com.marshalchen.common.uimodule.shapeimageview.PentagonImageView
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_margin="8dp"
                android:src="@drawable/shape_image_neo"
                app:borderWidth="8dp"
                app:borderColor="@color/DarkGray"
                android:layout_gravity="center_horizontal"/>

            <com.marshalchen.common.uimodule.shapeimageview.HexagonImageView
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_margin="8dp"
                android:src="@drawable/shape_image_neo"
                app:borderWidth="8dp"
                app:borderColor="@color/DarkGray"
                android:layout_gravity="center_horizontal"/>

            <com.marshalchen.common.uimodule.shapeimageview.OctogonImageView
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_margin="8dp"
                android:src="@drawable/shape_image_neo"
                app:borderWidth="8dp"
                app:borderColor="@color/DarkGray"
                android:layout_gravity="center_horizontal"/>

            <com.marshalchen.common.uimodule.shapeimageview.HeartImageView
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_margin="8dp"
                android:src="@drawable/shape_image_neo"
                app:borderWidth="8dp"
                app:borderColor="@color/DarkGray"
                android:layout_gravity="center_horizontal"/>

            <com.marshalchen.common.uimodule.shapeimageview.StarImageView
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_margin="8dp"
                android:src="@drawable/shape_image_neo"
                app:borderWidth="8dp"
                app:borderColor="@color/DarkGray"
                app:strokeCap="round"
                app:strokeJoin="round"
                android:layout_gravity="center_horizontal"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
